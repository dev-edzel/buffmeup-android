<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bottomnavmenu">

<uses-feature android:name="android.hardware.sensor.stepcounter"/>
    <uses-feature android:name="android.hardware.sensor.stepdetector"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StepsCounter"></activity>
        <activity android:name=".ArmExercise" />
        <activity android:name=".LegExercise" />
        <activity android:name=".AbsExercise" />
        <activity android:name=".MapsActivity" />
        <activity
            android:name=".ViewCalories"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".ViewSleepDuration"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_sleepduration"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".ViewWeight"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name=".WeightGain" />
        <activity android:name=".WeightLoss" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>